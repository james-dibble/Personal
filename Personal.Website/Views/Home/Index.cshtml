        <div class="col-lg-3">
            <div class="elipse">
                <p><i class="fa fa-comments-o fa-2x"></i></p>
            </div>
        </div>
        <div class="col-lg-9">
            <h2>I does blogging</h2>
            <p>I like to share my solutions to any tough problems I come accross, and I share alot of my code with the world.</p>
            <a href="@this.Url.Action("blogarchive", "posts")" class="btn btn-primary">Blog&nbsp;&nbsp;<span class="glyphicon glyphicon-expand"></span></a>
        </div>
    </div>
    <div class="scroll-arrow" data-scroll-to="#social">
        <i class="fa fa-angle-down"></i>
        <i class="fa fa-angle-down"></i>
    </div>
</div>
<div class="jumbotron" id="social">
    <div class="container-fluid">
        <div class="col-lg-3">
            <div class="elipse">
                <p><i class="fa fa-users fa-2x"></i></p>
            </div>
        </div>
        <div class="col-lg-9">
            <h2>I does social</h2>
            <a href="https://twitter.com/dibble_james" target="_blank"><i class="fa fa-twitter fa-3x"></i></a>
            <a href="https://plus.google.com/104250015987511319684/posts" target="_blank"><span class="fa fa-google-plus fa-3x"></span></a>
            <a href="http://www.linkedin.com/in/dibblejames" target="_blank"><span class="fa fa-linkedin fa-3x"></span></a>
            <a href="https://github.com/james-dibble/" target="_blank"><span class="fa fa-github fa-3x"></span></a>
        </div>
    </div>
</div>

@section Script
{
    <script src="http://asset.jdibble.co.uk/script/jquery-scrollto.js"></script>
    <script src="http://asset.jdibble.co.uk/script/jquery.scrollorama.js"></script>
    <script>
        $(function () {
            $('[data-scroll-to]').click(function () {
                $($(this).data('scroll-to')).ScrollTo({
                    duration: 800,
                });
            });
            
            var initScrollorama = function() {
                var scrollorama = $.scrollorama({
                    blocks: '.jumbotron',
                    enablePin: false
                });

                scrollorama
                    .animate('#hello h1',           { duration: $('#hello').height(), property: 'top', end: '+500px' })
                    .animate('#hello .elipse',      { duration: $('#hello').height() - 70, property: 'top', end: '+300px' })
                    .animate('#websites .col-lg-9', { duration: $('#websites').height() - 70, property: 'right', start: '-1500px' })
                    .animate('#websites .elipse',   { duration: $('#websites').height() - 70, property: 'left', start: '-1500px' })
                    .animate('#apps .col-lg-9',     { duration: $('#apps').height() - 70, property: 'right', start: '-1500px' })
                    .animate('#apps .elipse',       { duration: $('#apps').height() - 70, property: 'left', start: '-1500px' })
                    .animate('#blogging .col-lg-9', { duration: $('#blogging').height() - 70, property: 'right', start: '-1500px' })
                    .animate('#blogging .elipse',   { duration: $('#blogging').height() - 70, property: 'left', start: '-1500px' })
                    .animate('#social .col-lg-9',   { duration: $('#social').height() - 70, property: 'right', start: '-1500px' })
                    .animate('#social .elipse',     { duration: $('#social').height() - 70, property: 'left', start: '-1500px' })

                    .animate('#websites .col-lg-9', { duration: $('#websites').height() -70, delay: $('#websites').height() + 180, property: 'top', end: '+400px' })
                    .animate('#websites .elipse', { duration: $('#websites').height() - 70, delay: $('#websites').height() + 180, property: 'top', end: '+500px' })
                    .animate('#apps .col-lg-9', { duration: $('#apps').height() - 70, delay: $('#apps').height() + 180, property: 'top', end: '+400px' })
                    .animate('#apps .elipse', { duration: $('#apps').height() - 70, delay: $('#apps').height() + 180, property: 'top', end: '+500px' })
                    .animate('#blogging .col-lg-9', { duration: $('#blogging').height() - 70, delay: $('#blogging').height() + 180, property: 'top', end: '+400px' })
                    .animate('#blogging .elipse', { duration: $('#blogging').height() - 70, delay: $('#blogging').height() + 180, property: 'top', end: '+500px' })
                ;
            };

            $(window).resize(initScrollorama);

            initScrollorama();
        });
    </script>
}
