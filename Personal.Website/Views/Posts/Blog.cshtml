@model Blog
@{
    ViewBag.Title = string.Join(" - ", "James Dibble", "Blog", this.Model.Title);
    ViewBag.Description = this.Model.Abstract;
}
@section Meta
{
    <link rel="canonical" href="http://www.jdibble.co.uk@(this.Url.Action("blog", "posts", new { year = this.Model.Date.Year, month = this.Model.Date.Month, day = this.Model.Date.Day, title = this.Model.Title.ToLowerInvariant().Replace(' ', '-') }))" />
}
@section Script
{
    <script src="@this.Url.Content("~/asset/script/post.min.js")"></script>
}
@this.Html.Action("BlogHeader", "Posts", new { year = this.Model.Date.Year, month = this.Model.Date.Month, canRemove = false })
@this.Html.Partial("PageTitle", string.Join(" - ", this.Model.Date.ToString("d MMMM yyyy"), this.Model.Title))

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="lead animate">@this.Model.Abstract</p>
            <div class="animate">
                @this.Html.Raw(this.Model.Content)
            </div>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animate">
            <p class="lead">
                Comments
            </p>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animate">
            <div id="disqus_thread"></div>
            <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
            <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
        </div>
    </div>
</div>
