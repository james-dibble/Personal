@model Blog
@{
    this.Title = string.Join(" - ", "Blog", this.Model.Title);
    this.Description = this.Model.Abstract;
}
@section Meta
{
    <link rel="canonical" href="http://www.jdibble.co.uk@(this.Url.Action("blog", "posts", new { year = this.Model.Date.Year, month = this.Model.Date.Month, day = this.Model.Date.Day, title = this.Model.Title.ToLowerInvariant().Replace(' ', '-') }))" />
}
@section Script
{
    <script src="@this.Url.Content("~/asset/script/post.min.js")"></script>
}
<article class="post" data-id="@this.Model.Date.ToFileTimeUtc()" itemscope itemtype="http://schema.org/BlogPosting" itemprop="blogPost">
    <div class="col-lg-10 col-md-10 col-sm-9">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="page-header">
                <h1 itemprop="headline name"><a href="@this.Url.Action("blog", "posts", new { year = this.Model.Date.Year, month = this.Model.Date.Month, day = this.Model.Date.Day, title = this.Model.Title.ToLowerInvariant().Replace(' ', '-') })" itemprop="url">@this.Model.Title</a></h1>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="lead">@this.Model.Abstract</p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>
                <span itemprop="datePublished">@this.Model.Date.ToString("dddd d MMMM yyyy")</span>
                &nbsp;<span class="fa fa-tag"></span>
                @this.Html.Partial("TagLinks", this.Model)
            </p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" itemprop="articleBody">
            @this.Html.Raw(this.Model.Content)
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="disqus_thread"></div>
            <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
            <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
        </div>
    </div>

    @this.Html.Action("BlogHeader", "Posts", new { year = this.Model.Date.Year, month = this.Model.Date.Month, canRemove = false })
</article>